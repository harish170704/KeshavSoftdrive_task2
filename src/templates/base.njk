{% block navbar %}
{% include "navbar.njk" %}
{% endblock %}

{% block content %}
<!-- About Hero Section -->
<section class="bg-light py-5 text-center">
  <div class="container">
    <h1 class="display-5">About KeshavSoftdrive</h1>
    <p class="lead">We build clean, responsive, and modern UI using Bootstrap 5 and Vite + Nunjucks</p>
  </div>
</section>

<!-- Components Section -->
<section class="py-5">
  <div class="container">
    <h2 class="mb-4 text-center">Our Key Components</h2>
    <div class="row text-center">
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Navbar</h5>
            <p class="card-text">Reusable and responsive navigation bars for easy website navigation.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Hero Section</h5>
            <p class="card-text">Catchy hero sections to highlight your main content or features.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Cards</h5>
            <p class="card-text">Bootstrap cards for features, services, or any content block.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row text-center mt-4">
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Forms</h5>
            <p class="card-text">Responsive contact or subscription forms with proper validation.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Modals</h5>
            <p class="card-text">Interactive modals for notifications, login forms, or additional info.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Carousels</h5>
            <p class="card-text">Beautiful image or content carousels for slideshows.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}

